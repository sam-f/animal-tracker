<% content_for :heading, "Animal groups" %>

<%= link_to "Add", new_dashboard_animal_group_path, class: "button is-primary" %>

<hr />

<% unless @animal_groups.any? %>
  <h2 class="title is-2">You haven't added any animal groups yet</h2>
  <%= link_to "Add some here!", new_dashboard_animal_group_path, class: "button is-primary" %>
<% end %>

<% @animal_groups.in_groups_of(3, false).each do |group| %>
  <div class="columns">
    <% group.each do |animal_group| %>
      <div class="column">
        <div class="card">
          <div class="card-content">
            <div class="content">
              <p class="title is-4">
                <%= link_to animal_group.name, "#" %>
              </p>
              <p>
                <%= animal_group.description %>
              </p>
            </div>
          </div>
          <footer class="card-footer">
            <%= link_to "Edit", edit_dashboard_animal_group_path(animal_group), class: "card-footer-item" %>
            <%= link_to "Animals", dashboard_animals_path(animal_group_id: animal_group.id), class: "card-footer-item" %>
          </footer>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
